{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Dilation": {
            "properties": {
                "add": {
                    "type": "number"
                },
                "rolls": {
                    "type": "number"
                },
                "sides": {
                    "type": "number"
                }
            },
            "type": "object"
        },
        "FeywildSegment": {
            "properties": {
                "astronomics": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 15,
                    "pattern": "a-zA-Z0-9 !.,;:'\""
                },
                "notes": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 50,
                    "pattern": "a-zA-Z0-9 !.,;:'\""
                },
                "weather": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 15,
                    "pattern": "a-zA-Z0-9 !.,;:'\""
                }
            },
            "type": "object"
        }
    },
    "required": ["currentSegment", "dilation","feySegments","feywildName"],
    "properties": {
        "currentSegment": {
            "type": "number"
        },
        "dilation": {
            "$ref": "#/definitions/Dilation"
        },
        "feySegments": {
            "items": {
                "$ref": "#/definitions/FeywildSegment"
            },
            "type": "array"
        },
        "feywildName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 15,
            "pattern": "a-zA-Z0-9 !.,;:'\""
        }
    },
    "type": "object"
}